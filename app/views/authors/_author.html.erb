<div class="container">
  <% @authors.each do |author| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-body">
            <h5 class="card-title"><%= link_to author.name, author_path(author), class: "text-success" %></h5>
            <p class="card-text"><%= truncate(author.description, length: 100) %></p>
            <%= link_to "View", author_path(author), class: "btn btn-outline-success" %>
            <% if logged_in? && (author.user == current_user || current_user.admin?) %>
              <%= link_to "Edit", edit_author_path(author), class: "btn btn-outline-info" %>
            <% end %>
          </div>
          <div class="card-footer text-muted">
            <small>Created <%= time_ago_in_words(author.created_at) %> ago, 
            edited <%= time_ago_in_words(author.updated_at) %> ago</small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>